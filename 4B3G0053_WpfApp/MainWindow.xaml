<Window x:Class="_4B3G0053_WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4B3G0053_WpfApp"
        mc:Ignorable="d"
       Title="飲料點餐系統ver3" Height="624" Width="838">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="304"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="641*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Background="#FFF9F8E6" Grid.ColumnSpan="2" Header="內用/外帶" Margin="10,10,10,10">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RadioButton1" Content="內用" HorizontalAlignment="Left" Margin="50,10,0,10" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" IsChecked="True" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="RadioButton2" Content="外帶" HorizontalAlignment="Left" Margin="50,10,0,10" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Checked="RadioButton_Checked"/>
            </StackPanel>
        </GroupBox>
        <StackPanel x:Name="DrinkMenu_StackPanel" Background="#FFF5EBEB" Grid.Row="1" Margin="10,10,10,10"/>
        <Button x:Name="OrderButton" Grid.Column="1" Content="訂購" Margin="36,139,36,0" Grid.Row="1" Height="72" VerticalAlignment="Top" Click="OrderButton_Click" FontSize="16"/>
        <TextBlock x:Name="Result_TextBlock" Margin="10,10,10,10" Grid.Row="2" TextWrapping="Wrap" Grid.ColumnSpan="2" FontSize="16" Background="#FFEBEFDE" Padding="10,10,10,10"/>

    </Grid>
</Window>
